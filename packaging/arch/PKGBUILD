# Maintainer: Augustus Otu <augustus@example.com>
pkgname=stormdl
pkgver=0.1.0
pkgrel=1
pkgdesc="Next-generation download accelerator with adaptive multi-segment parallel downloads"
arch=('x86_64' 'aarch64')
url="https://github.com/augustusotu/stormdl"
license=('MIT')
depends=('openssl')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/augustusotu/stormdl/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
    cargo build --release --locked
}

check() {
    cd "$pkgname-$pkgver"
    cargo test --release --locked
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 "target/release/storm" "$pkgdir/usr/bin/storm"
    install -Dm644 "config/default.toml" "$pkgdir/etc/storm-dl/config.toml"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
